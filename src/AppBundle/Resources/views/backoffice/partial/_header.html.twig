<header class="app-header navbar">
    <button class="navbar-toggler mobile-sidebar-toggler hidden-lg-up" type="button">☰</button>
    <a class="navbar-brand" href="#"></a>
    <ul class="nav navbar-nav hidden-md-down">
        <li class="nav-item">
            <a class="nav-link navbar-toggler sidebar-toggler" href="#">☰</a>
        </li>
    </ul>
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item hidden-md-down spaced-logout-btn">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                <a data-toggle="tooltip" data-placement="left" title="{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary btn-sm" href="{{ path('fos_user_security_logout') }}">
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                </a>
            {% else %}
                <a class="btn btn-primary btn-sm" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </li>
    </ul>
</header>
