{% extends "::backoffice_base.html.twig" %}

{% block bodyclass %}app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden{% endblock %}
{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <a target="_blank" href="{{ path('backoffice_polls_add') }}" class="btn btn-primary btn-lg btn-block">
                    <i class="fa fa-plus-circle"></i> Cr√©er un nouveau sondage
                </a>
            </div>
        </div>
        <div class="row show-grid">
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Utilisateur</th>
                        <th>Nb question</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for poll in polls %}
                        <tr>
                            <td><a target="_blank" href="{{ path('answer_poll',{'id':poll.id}) }}">{{ poll.title }} &nbsp; <i class="fa fa-external-link" aria-hidden="true"></i></a></td>
                            <td>{{ poll.user.email }}</td>
                            <td></td>
                            <td>
                                <a href="{{ path('backoffice_poll_edit', {'id': poll.id}) }}"
                                   class="btn btn-primary">
                                    <i class="fa fa-pencil"></i> Editer
                                </a>

                                <a href="{{ path('backoffice_poll_delete', {'id': poll.id}) }}"
                                   class="btn btn-danger">
                                    <i class="fa fa-trash"></i>&nbsp;Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
