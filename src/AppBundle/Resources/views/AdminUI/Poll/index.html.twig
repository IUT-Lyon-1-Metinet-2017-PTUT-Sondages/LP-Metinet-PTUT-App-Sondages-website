{% extends "::adminbase.html.twig" %}
{% block bodyclass %}app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden{% endblock %}
{% block main %}
    <!-- Breadcrumb -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Accueil</li>
        <li class="breadcrumb-item"><a href="#">Admin</a>
        </li>
        <li class="breadcrumb-item active">Sondage</li>
    </ol>

    <div class="container-fluid">
        <a href="{{ path('admin_add_poll') }}" class="btn btn-primary btn-lg btn-block">
            <i class="fa fa-plus-circle"></i> Cr√©er un nouveau sondage
        </a>

        <table class="table table-bordered table-striped table-condensed">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Utilisateur</th>
                <th>Nb question</th>
            </tr>
            </thead>
            <tbody>
            {% for poll in polls %}
                <tr>
                    <td>{{ poll.title }}</td>
                    <td>{{ poll.user.email }}</td>
                    <td></td>
                    <td>
                        <button type="button" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp; Editer</button>
                        <a href="{{ path('admin_delete_poll', {'id': poll.id}) }}">
                        <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i>&nbsp; Supprimer
                        </button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.conainer-fluid -->
{% endblock %}
