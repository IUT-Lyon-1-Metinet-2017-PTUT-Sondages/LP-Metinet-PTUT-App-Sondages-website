    <script>
      // var, because it should be accessible in other JS files
      var STRINGS = Object.freeze({
        save: "{{ 'save'|trans }}"
      });
    </script>
    <script src="{{ asset('admin-interface/dist/manifest.js') }}"></script>
    <script src="{{ asset('admin-interface/dist/vendor.js') }}"></script>
