{% extends "::backoffice_base.html.twig" %}
{% block title %}Kodastran Backoffice Login{% endblock %}
{% block bodyclass %}app header-fixed footer-fixed{% endblock %}

{% block mainclass %}main{% endblock %}
{% block main %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}
