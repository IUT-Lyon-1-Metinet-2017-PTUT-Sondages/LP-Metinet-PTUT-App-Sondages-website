{% extends "::backoffice_base.html.twig" %}

{% set includeFooter = false %}

{% block bodyclass %}app header-fixed sidebar-hidden aside-menu-hidden{% endblock %}

{% block title %}Kodastran Backoffice Login{% endblock %}

{% block main %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}
