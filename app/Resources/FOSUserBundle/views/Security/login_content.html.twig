{% trans_default_domain 'FOSUserBundle' %}


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group mb-0">
                    <div class="card p-2">
                      
                        <form action="{{ path("fos_user_security_check") }}" method="post"  class="card-block">
                            <h1>{{ 'layout.login.title'|trans({}, 'FOSUserBundle') }}</h1>
                            <p class="text-muted">{{ 'layout.login.long'|trans({}, 'FOSUserBundle') }}</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="input-group mb-1">
                                <span class="input-group-addon"><i class="icon-user"></i>
                                </span>
                                <input type="text" id="username" class="spaced-login-input" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
                            </div>
                            <div class="input-group mb-2">
                                <span class="input-group-addon"><i class="icon-lock"></i>
                                </span>
                               <input type="password" id="password" class="spaced-login-input" name="_password" required="required" />
                            </div>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" id="_submit" class="btn btn-primary px-2" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                </div>
                                <div class="col-6 text-right">
                                    <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-link px-0">{{ 'layout.login.password.forgot'|trans({}, 'FOSUserBundle') }}</a>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card card-inverse card-primary py-3 hidden-md-down" style="width:44%">
                        <div class="card-block text-center">
                            <div>
                                <h2>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
                                <p>{{ 'layout.register.explanation'|trans({}, 'FOSUserBundle') }}</p>
                                <a href="{{ path('fos_user_registration_register') }}"class="btn btn-primary active mt-1">{{ 'layout.register.submit'|trans({}, 'FOSUserBundle') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
